@using Mvp.Selections.Domain
@model Mvp.Feature.Selections.Models.Apply.ApplicationFormModel

<div class="mvp-fs-applyapplicationform col-12">
    <partial name="~/Views/Shared/Components/ApplyApplicationForm/_Progress.cshtml" />
    <h2 asp-for="ProfileTitleLabel"></h2>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                @Model.CurrentUser.Name<br/>
                @Model.CurrentUser.Email<br/>
                @Model.CurrentUser.Country.Name<br/>
                <br/>
                <a asp-for="OktaLink" class="btn btn-primary" role="button"></a>
            </div>
            <div class="col-6">
                @foreach (ProfileLink link in Model.CurrentUser.Links)
                {
                    <text>@link.Type: <a href="@link.Uri">@link.Name</a><br/></text>
                }
                <br/>
                <a asp-for="MyUserLink" class="btn btn-primary" role="button"></a>
            </div>
        </div>
    </div>
    <br/>
    <form method="post">
        <input asp-for="IsNavigation" type="hidden" value="true" />
        <input asp-for="CurrentStep" type="hidden" value="Objectives"/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button asp-for="NextLabel" type="submit" class="btn btn-primary"></button>
    </form>
    <form method="post">
        <input asp-for="IsNavigation" type="hidden" value="true" />
        <input asp-for="CurrentStep" type="hidden" value="MvpType"/>
        <button asp-for="PreviousLabel" type="submit" class="btn btn-secondary"></button>
    </form>
</div>