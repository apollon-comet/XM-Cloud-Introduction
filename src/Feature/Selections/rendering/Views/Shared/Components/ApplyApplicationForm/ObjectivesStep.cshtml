@model Mvp.Feature.Selections.Models.Apply.ApplicationFormModel

<div class="mvp-fs-applyapplicationform col-12">
    <h2 asp-for="ObjectivesTitleLabel"></h2>
    <form>
        <input asp-for="CurrentStep" type="hidden" value="Objectives"/>
        <div class="form-group">
            <label asp-for="EligibilityLabel"></label>
            <textarea asp-for="Eligibility" rows="3" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label asp-for="ObjectivesLabel"></label>
            <textarea asp-for="Objectives" rows="3" class="form-control" required></textarea>
        </div>
        <div class="form-group">
            <label asp-for="MentorsLabel"></label>
            <input asp-for="Mentors" class="form-control"/>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button asp-for="NextLabel" type="submit" class="btn btn-primary"></button>
    </form>
    <form>
        <input asp-for="IsBack" type="hidden" value="true"/>
        <input asp-for="CurrentStep" type="hidden" value="Profile"/>
        <button asp-for="PreviousLabel" type="submit" class="btn btn-secondary"></button>
    </form>
</div>