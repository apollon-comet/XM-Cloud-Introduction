@using Mvp.Selections.Domain
@model Mvp.Feature.Selections.Models.Apply.ApplicationFormModel

<div class="mvp-fs-applyapplicationform">
    <h2 asp-for="MvpTypeTitleLabel"></h2>
    <form>
        <input asp-for="CurrentStep" type="hidden" />
        <div class="form-group">
            <label asp-for="MvpTypeLabel"></label>
            <select asp-for="MvpTypeId" class="form-control">
                @foreach (MvpType mvpType in Model.MvpTypes)
                {
                    <option value="@mvpType.Id">@mvpType.Name</option>
                }
            </select>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <button asp-for="NextLabel" type="submit" class="btn btn-primary"></button>
    </form>
    <form>
        <input asp-for="CurrentStep" type="hidden" value="Consent" />
        <button asp-for="PreviousLabel" type="submit" class="btn btn-secondary"></button>
    </form>
</div>